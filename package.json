{
  "name": "@technote-space/get-next-version-action",
  "version": "1.3.15",
  "description": "GitHub Actions to get next version from commit histories.",
  "keywords": [
    "github",
    "github actions"
  ],
  "homepage": "https://github.com/technote-space/get-next-version-action",
  "bugs": {
    "url": "https://github.com/technote-space/get-next-version-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/get-next-version-action.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "tsc",
    "cover": "vitest run --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.1",
    "@technote-space/filter-github-action": "^0.6.0",
    "@technote-space/github-action-helper": "^5.3.4",
    "@technote-space/github-action-log-helper": "^0.2.3",
    "@technote-space/github-action-version-helper": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@technote-space/github-action-test-helper": "^0.9.4",
    "@technote-space/release-github-actions-cli": "^1.8.9",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "c8": "^7.11.2",
    "eslint": "^8.13.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "nock": "^13.2.4",
    "pinst": "^3.0.0",
    "typescript": "^4.6.3",
    "vitest": "^0.9.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
