{
  "name": "@technote-space/get-next-version-action",
  "version": "1.3.13",
  "description": "GitHub Actions to get next version from commit histories.",
  "keywords": [
    "github",
    "github actions"
  ],
  "homepage": "https://github.com/technote-space/get-next-version-action",
  "bugs": {
    "url": "https://github.com/technote-space/get-next-version-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/get-next-version-action.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "tsc",
    "cover": "jest --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts' '__tests__/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn cover",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@technote-space/filter-github-action": "^0.5.51",
    "@technote-space/github-action-helper": "^5.2.25",
    "@technote-space/github-action-log-helper": "^0.1.43",
    "@technote-space/github-action-version-helper": "^0.5.22"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@technote-space/github-action-test-helper": "^0.7.30",
    "@technote-space/release-github-actions-cli": "^1.8.8",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-circus": "^27.4.5",
    "lint-staged": "^12.1.2",
    "nock": "^13.2.1",
    "pinst": "^2.1.6",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
